<h1>Search Results</h1>

<h2>Gives</h2>
<p><%= @give_results.size %> gives found.</p>

<% @give_results.each do |give| %>
  <div class="give">

    <p><strong>Title:</strong> <%= give.title %></p>

    <p><strong>Description:</strong> <%= (give.description.length < 1) ? 'No description available.' : give.description %></p>

    <p><strong>Cost:</strong> <%= give.cost %></p>

    <p><strong>Giver:</strong> <%= User.find(give.user_id).username %></p>

    <%= link_to "Message", rooms_path(give_id: give.id), method: :post, class: 'pseudobutton' %>

  </div>
<% end %>

<h2>Users You May Be Interested In</h2>
<p><%= @user_results.size %> users found.</p>

<% @user_results.each do |give| %>
  <div class="give">

    <p><strong>User:</strong> <%= give.username %></p>

    <p><strong>Description:</strong> <%= give.description %></p>

    <%= link_to "View Profile", users_path(give.id), method: :post, class: 'pseudobutton' %>
    <%= link_to "Message", rooms_path(give_id: give.id), method: :post, class: 'pseudobutton' %>

  </div>
<% end %>
